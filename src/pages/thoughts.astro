---
import { getCollection } from "astro:content";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Thought from "../components/Thought.astro";
import BaseHead from "../components/BaseHead.astro";

import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const posts = (await getCollection('thoughts')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const title = `Thoughts by ${SITE_TITLE}`;
---

<!doctype html>
<html>
    <head>
        <BaseHead title={title} description={SITE_DESCRIPTION} />
        <link rel="stylesheet" href="/src/styles/global.css">
        <style>
            main {
				width: 720px;
			}
            div {
                padding-bottom: 5rem;
            }
            .bottom-img {
				margin-left: 50%;
			}
        </style>
    </head>
    <body>
        <Header />
        <main>
            <h3 class="center-text">ðŸ’­ <span>Thoughts</span> ðŸ’­</h3>
            <br>
            <div>
                {
                    posts.map(post => (
                        <div>
                            <Thought {post} />
                        </div>
                    ))
                }
            </div>
            <img class="bottom-img" src="/scribbles/FoundTheEnd.png" alt="Welp, found the end. Congrats!">
        </main>
        <Footer />
    </body>
</html>