---
import Card from "./Card.astro"

const roles = [
    '🎓 Self Taught Programmer',
    '🌐 Web Dev',
    '👾 Game Dev',
    '💻 Front End Dev',
    '💾 Back End Dev',
    '🪶 Writer',
    '🎨 Artist',
    '🤓 Nerd',
    '🎥 YouTube Person',
    '🎙️ Twitch Person',
    '💙 VS Code btw',
]
---

<style>
    #roles-list {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
    }
</style>

<Card>
    <img src="/Sunglasses.png" width="64" alt="Profile picture">
    <h5>Grayvox <span class="mini-text">he/him</span></h5>
    <p>
        <i>User joined on XXX, XX, XXXX.</i>
    </p>
    <div id="roles-list">
        {roles.map(role => (
            <div>
                <code>{role}</code>
            </div>
        ))}
    </div>
</Card>