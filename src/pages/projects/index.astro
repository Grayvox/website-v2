---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('projects'));

const title = `Projects by ${SITE_TITLE}`
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			main h3 span {
				text-shadow: 3px 3px 10px black;
			}
			ul, li {
				margin-top: 0px;
			}
			ul li {
				display: flex;
				width: 100%;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li a {
				display: block;
			}
			h4 {
				margin-top: 20px;
			}
            .project-img {
    			display: block;
    			margin-left: auto;
    			margin-right: auto;
    			width: 100%;
    			max-height: 200px;
    			object-fit: cover;
    			overflow: hidden;
			}	
			.bottom-img {
				margin-left: 50rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h3 class="center-text">⛏️ <span>Projects</span> ⛏️</h3>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/projects/${post.slug}/`} class="special-box post">
									<div>
										<img class="project-img" src={post.data.image.src} alt={post.data.image.alt}>
										<h4><b>{post.data.title}</b></h4>
									</div>
									<p>{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
				<img class="bottom-img" src="/scribbles/FoundTheEnd.png" alt="Welp, found the end. Congrats!">
			</section>
		</main>
		<Footer />
	</body>
</html>