---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
	// Will fix up later
);

const title = `Writings by ${SITE_TITLE}`
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			main h3 span {
				text-shadow: 3px 3px 10px black;
			}
			ul, li {
				margin-top: 0px;
			}
			ul li {
				display: flex;
				width: 100%;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li a {
				display: block;
			}
			ul li a p {
				margin-bottom: 10px;
			}
			.top-img {
				margin-left: 2rem;
			}
			.bottom-img {
				margin-left: 50rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h3 class="center-text">‚úçÔ∏è <span>Writings</span> ‚úçÔ∏è</h3>
			<section>
				<img class="top-img" src="/scribbles/LatestBlogPost.png" alt="Check out my latest blog post">
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`} class="special-box post">
									<div>
										<h4><b>{post.data.title}</b></h4>
										<p class="date"><i>ü™∂ Committed to writing <b><FormattedDate date={post.data.pubDate} /></b></i></p>
									</div>
									<p>{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
				<img class="bottom-img" src="/scribbles/FoundTheEnd.png" alt="Welp, found the end. Congrats!">
			</section>
		</main>
		<Footer />
	</body>
</html>
