---
import AboutContents from '../components/AboutContents.astro';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Interests from '../components/Interests.astro';
import Technologies from '../components/Technologies.astro';
import { SITE_TITLE, SITE_DESCRIPTION, LINKS } from '../consts.ts';

const title = `About Me - ${SITE_TITLE}`
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="breaks">
			<h3 class="center-text">🐺 <span>About Me</span> 🐺</h3>
			<br>
			<AboutContents />
			<Technologies />
			<Interests />
		</main>
		<Footer />
	</body>
</html>