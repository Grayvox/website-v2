---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul, li {
				margin-top: 0px;
			}
			ul li {
				display: flex;
				width: 100%;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li a {
				display: block;
			}
			ul li a p {
				margin-bottom: 10px;
			}
			.top-img {
				margin-left: 2rem;
			}
			.bottom-img {
				margin-left: 50rem;
			}
			.center-text {
				text-align: center;
			}
			.post {
				width: 100%;
				margin: 5%;
				padding: 1rem;
				color: var(--text);
				line-height: 1;
				border: solid var(--blend-text) 1px;
				background-color: var(--bg-dark);
				border-radius: 10px;
			}
			.date {
				font-size: 17px;
				color: var(--blend-text);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h3 class="center-text">‚úçÔ∏è Writings ‚úçÔ∏è</h3>
			<section>
				<img class="top-img" src="/LatestBlogPost.png" alt="Check out my latest blog post">
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`} class="post">
									<div>
										<h4><b>{post.data.title}</b></h4>
										<p class="date"><i>ü™∂ Committed to writing <b><FormattedDate date={post.data.pubDate} /></b></i></p>
									</div>
									<p>{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
				<img class="bottom-img" src="/FoundTheEnd.png" alt="Welp, found the end. Congrats!">
			</section>
		</main>
		<Footer />
	</body>
</html>
